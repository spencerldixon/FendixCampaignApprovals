<div class="page-header">
  <h1>Listing Contacts</h1>
</div>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Admin</th>
      <th>Last Login</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin ? 'Yes' : 'No' %></td>
        <td><%= user.current_sign_in_at ? user.current_sign_in_at.to_formatted_s(:long_ordinal) : "Not Yet Signed In" %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure? This will delete all of this users Pages and Responses.' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to 'New User', new_user_path, method: :get, class: "btn btn-primary" %>
