<div class="form-horizontal">
  <%= form_for(@list) do |f| %>
    <% if @list.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@list.errors.count, "error") %> prohibited this list from being saved:</h2>

        <ul>
        <% @list.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :name, class: "col-lg-2 control-label" %>
      <div class="col-lg-5"><%= f.text_field :name, class: "form-control" %></div>
    </div>

<div class="form-group">
      
        <div class="col-lg-2 control-label"><strong>Network Partners</strong></div>
        <div class="col-lg-2">
        <%= collection_check_boxes(:list, :network_partner_ids, NetworkPartner.all.order('name ASC'), :id, :full_name) do |b| %>
        <div>
          <%= b.check_box %>
          <%= b.label %>
        </div>
      <% end %>
    </div>
</div>

    
    <div class="col-lg-offset-2"><%= f.submit class: "btn btn-primary" %></div>
  <% end %>
</div>